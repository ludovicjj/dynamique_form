<table class="table table-striped">
    <thead>
        <tr>
            <th>Ref</th>
            <th>Objet</th>
            <th>Nombre d'avis</th>
            <th>Validation</th>
            <th>Envoi</th>
            <th>Créé par</th>
            <th>Validé par</th>
            <th>Statut</th>
            <th>Livrable / édition</th>
        </tr>
    </thead>
    <tbody>
    {% for report in groupedReports['construction'] %}
        {{ include('client_case/_row_report.html.twig') }}
    {% else %}
        <tr>
            <td colspan="9" class="text-center">Aucun livrable en phrase de travaux</td>
        </tr>
    {% endfor %}
