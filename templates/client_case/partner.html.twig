{% extends 'dialogFrame.html.twig' %}

{% block body %}
    {{ include('client_case/_form_partner.html.twig') }}

    <turbo-stream action="replace" target="modal-title">
        <template>
            <h1 class="modal-title fs-5" id="modal-title" data-dialog-target="title">Gestion partenaires</h1>
        </template>
    </turbo-stream>
{% endblock %}


{% block stream_response %}
    <turbo-stream action="update" target="dialog">
        <template></template>
    </turbo-stream>

    <turbo-stream action="append" target="flash-container">
        <template>{{ include('partial/_flashes.html.twig') }}</template>
    </turbo-stream>

    <turbo-stream action="update" target="partner-list-tab">
        <template>{{ include('client_case/_list_partner_tab.html.twig') }}</template>
    </turbo-stream>
{% endblock %}