{% extends 'modalFrame.html.twig' %}

{% block title %}Partner{% endblock %}

{% block body %}
    <div>
        {{ include('partner/_form.html.twig') }}
    </div>

    {% if app.request.headers.get('turbo-frame') == 'modal' %}
        <turbo-stream action="replace" target="modal-title">
            <template>
                <h1 class="modal-title fs-5" id="modal-title" data-modal-target="title">Modification partenaire</h1>
            </template>
        </turbo-stream>
    {% endif %}
{% endblock %}

{% block stream_response %}
    <turbo-stream action="update" target="modal">
        <template></template>
    </turbo-stream>

    <turbo-stream action="append" target="flash-container">
        <template>{{ include('partial/_flashes.html.twig') }}</template>
    </turbo-stream>

    <turbo-stream action="replace" target="partner-list-item-{{ partner.id }}">
        <template>{{ include('partner/_row.html.twig') }}</template>
    </turbo-stream>
{% endblock %}