{% component BootstrapModal with {id: 'partner-delete-modal'} %}
    {% block modal_ghost %}
        <button type="button"
                class="ghost"
                data-action="live#emit"
                data-live-event-param="name(Partner:PartnerSearch)|reset"
        >
        </button>
    {% endblock %}
    {% block modal_header %}
        <h5>Supprimer un partenaire</h5>
        <button
                type="button"
                class="btn btn-modal-close ms-auto"
                aria-label="Close"
                data-action="live#emit"
                data-live-event-param="name(Partner:PartnerSearch)|reset"
        >
            <twig:Icon name="x"/>
        </button>
    {% endblock %}

    {% block modal_body %}
        {% if isLoading %}
            {% include '_partial/tool/loader.html.twig' %}
        {% else %}
            <div class="d-none"></div>
            {{ component('Partner:PartnerDelete', {
                id: partnerId
            }) }}
        {% endif %}
    {% endblock %}
{% endcomponent %}