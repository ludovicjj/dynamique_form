<div {{ attributes.defaults({
    class: open ? 'menu my-0 p-0 open' : 'menu my-0 p-0 close',
    'data-url': path('app_toggle_menu'),
}) }} data-controller="menu"
>

    {# Brand #}
    <div class="menu-brand">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
        </a>
    </div>

    {# Menu Links #}
    <ul class="navbar-nav">
        {% for link in links %}
            <li class="nav-item">
                <a
                    class="nav-link active d-flex flex-row align-items-center"
                    aria-current="page"
                    href="{{ path(link.route) }}"
                >
                    <span class="icon-link">
                        <twig:Icon name="{{ link.icon }}"/>
                    </span>
                    <span class="label-link ps-2">{{ link.label }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>