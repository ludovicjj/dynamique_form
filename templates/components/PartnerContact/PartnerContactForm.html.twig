<div {{ attributes }}>
    {{ form_start(form) }}

    <h5 class="mb-3 fs-6 fw-semibold">Informations du partenaire contact</h5>

    <div class="row">
        <div class="col-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-6">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-6">
            {{ form_row(form.phone) }}
        </div>
    </div>

    <div class="mb-3 text-center">
        <button type="submit" class="btn btn-secondary">Valider</button>
    </div>

    {{ form_end(form) }}
</div>