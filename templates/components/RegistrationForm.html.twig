<div{{ attributes }}>

    {% if isSuccessful %}
        <twig:Alert message="Welcome {{ newUserEmail }} ! Your registration has been successfully completed." />
    {% endif %}
        {{ form_start(form, {
            attr: {
                'novalidate': true,
                'data-action': 'live#action:prevent',
                'data-live-action-param': 'saveRegistration',
            }
        }) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.terms) }}

        <button
                type="submit"
                class="btn btn-primary {{ this.hasValidationErrors ? 'disabled' : '' }}"
        >
            Register
        </button>

        {{ form_rest(form) }}
        {{ form_end(form) }}
</div>